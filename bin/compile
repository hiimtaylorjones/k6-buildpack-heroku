#!/bin/sh

set -e

BUILD_DIR=$1
CACHE_DIR=$2

# config
VERSION="0.46.0"

# Buildpack URL
ARCHIVE_NAME=k6-v${VERSION}-linux-amd64
FILE_NAME=${ARCHIVE_NAME}.tar.bz2
BUILDPACK_K6_PACKAGE=https://github.com/grafana/k6/releases/download/v${VERSION}/${FILE_NAME}

mkdir -p $CACHE_DIR
if ! [ -e $CACHE_DIR/$FILE_NAME ]; then
  echo "-----> Fetching K6 ${VERSION} binaries at ${BUILDPACK_K6_PACKAGE}"
  curl $BUILDPACK_K6_PACKAGE -L -s -o $CACHE_DIR/$FILE_NAME
fi

echo "-----> Extracting K6 ${VERSION} binaries to ${BUILD_DIR}/vendor/k6"
mkdir -p $CACHE_DIR/$ARCHIVE_NAME
mkdir -p $BUILD_DIR/vendor
tar jxf $CACHE_DIR/$FILE_NAME -C $CACHE_DIR
mv $CACHE_DIR/$ARCHIVE_NAME $BUILD_DIR/vendor/k6

echo "-----> exporting PATH and LIBRARY_PATH"
PROFILE_PATH="$BUILD_DIR/.profile.d/k6.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:$HOME/vendor/k6/bin"' >> $PROFILE_PATH
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:vendor/k6/lib"' >> $PROFILE_PATH